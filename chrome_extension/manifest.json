{
    "manifest_version": 3,
    "name": "Tab Manager Pro",
    "version": "1.0",
    "description": "Quickly reset and organize your Chrome tabs with customizable pinned tabs and layouts",
    "permissions": [
        "tabs",
        "scripting",
        "windows",
        "storage"
    ],
    "host_permissions": [
        "https://mail.google.com/*",
        "https://calendar.google.com/*",
        "https://drive.google.com/*",
        "https://confluence.shopee.io/*",
        "https://datasuite.shopee.io/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "options_page": "options.html",
    "commands": {
        "clear-tabs": {
            "suggested_key": {
                "default": "Alt+Shift+C"
            },
            "description": "Reset and organize tabs"
        }
    }
} 